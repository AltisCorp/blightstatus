%section.search-results.browse-page{:style => "height: 700px"}
  .row-fluid
    .left-bar{:style => "top: 75px; height: 550px; position: absolute; width: 270px; left: 0; z-index: 1000"}
      .well{:style => "padding: 20px;"}
        .nav-header 
          %h2
            Browse
          %p
            (only showing properties with a case history)
        %form{:style => "padding: 0px 10px;"}
          %div{:style => "display: none"}
            %p.query-selector
              Case Status:
            =select( "state", "state", { "Open Cases" => "1", "Closed Cases" => "0"})
          %div
            %p{:style => "font-size: 120%; padding-left: 0 10px; margin: 15px 0 5px"}
              Show:
              %br
            =select( "only_recent_status", "only_recent_status", { "All Cases" => "0", "Only Most Recent Activity" => "1"})
          %div
            %p.query-selector
              Activity:
            =select( "status", "status", { "Inspected" => "inspections", "Notified" => "notifications", "Hearing" => "hearings", "Judgment" => "judgement", "Demolitions" => "demolitions", "Foreclosure" => "foreclosures"})
          %div
            %p.query-selector
              Occured in:
            =date_select("start_date", "start_date",  :default => @date, :order => [:month, :year], :start_year => 2011, :end_year => @date.year, :discard_day => true)

            %div{:style => "display: none"}
              %p{:style => " font-size: 120%; padding-left: 0 10px; margin: 15px 0 5px"}
                Show Stats:
                %br
              =select( "show_stats", "show_stats", { "Show Stats" => "1","Hide Stats" => "0" } )
          %div
            #map-loading.label.label-important
              Map Loading
            #no-data.label.label-important
              No results
            #stats-row


  .right-bar{:style => "left: 270px;width: 75%; position: absolute"}
    .toggle
      .btn-group{:style => "height: 50px"}
        / %input#map-search-mode{:name => "map-search-mode" , :type => "checkbox", :value => "true", :class => "filter-checkbox"}
        / %label.btn{:for => "map-search-mode"} Reload map when map is moved 

    #map

  .row
  .btn-toolbar
    .btn-group
