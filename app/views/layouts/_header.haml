.navbar
  .navbar-inner
    .container
      %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => "/"}
        =image_tag "blightstatus-logo.png"
      .nav-collapse
        .border
        %ul.nav.nav-pills.top-account.pull-right{"role" => "navigation"}
          %li.dropdown
            %a#drop1.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "button"}
              Account
              %b.caret
            .dropdown-menu{"aria-labelledby" => "drop1", :role => "menu"}
              -if account_signed_in?
                .span3
                  You are logged in as 
                  =current_account.email
                =link_to "Properties", "/accounts"
                =link_to('Logout', destroy_account_session_path, :method => :delete)
              -else
                not signed in


        %ul.nav.top-links
          %li
            =link_to "About", "/pages/about"
          %li
            =link_to "Help", "/pages/help"
        %ul.nav.top-search
          %li
            - if(controller_name != 'home')
              =render "layouts/search"        


