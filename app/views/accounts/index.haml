.container.about-page-content.accounts-page  
  .span12
    .span8{:style => "margin-left: 0"}
      .notice
        %h1
          My Watchlist
    .span4
  .row.span8
    .block
      #subscriptions
        -if @account_subcriptions.count  == 0
          .subscription
            %br
            %p 
              When the status of any property you are watching changes you'll be notified by email with a summary of the changes.

            %p 
              To watch a property, search for an address and at the property page you'll see a button that looks like this:
            %p
              =image_tag 'watchlist-sample.png', :style => "width: 150px"
            %p
              Click it and it be automatically be saved in your account.



        -else
          -@account_subcriptions.each do |address|
            .subscription{:id => "subscription-#{address.id}" }
              %h2.address-title
                =address.address_long


              -address.sorted_cases.each do |c|
                .progress-bar
                  %h3
                    Case:
                    =c.case_number
                  =render :partial => "addresses/progress-bar", :locals => {:kase => c}
                  -if c.case_data_error?
                    .block{:style => "text-align: center; padding: 0 0 10px; margin:0 auto;"}
                      %b{:style => "color: red"}
                        Warning:
                      This case is missing data.

              .clearfix
              %br
              .subscribe
                =link_to('Remove Watchlist', "/subscriptions/#{address.id}", :remote => true, :method => :delete, 'data-type' => 'json', :class => 'btn btn-primary btn-tight subscribe-button' , :id => "subscribe-button")
              .view-property
                =link_to address do
                  .btn.btn-primary.btn-tight
                    View Property
            .clearfix
  .row.span3
    .map#map{:style => "width: 300px; height: 200px"}
    .email-notification
      =form_for :account do |f|
        =f.check_box :send_notifications
        =f.label :send_notifications, "Receive Email Updates"


