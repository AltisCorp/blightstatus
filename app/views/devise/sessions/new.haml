%section.container.devise
  .span12
    .span3
      %br/
    .span4
      %h2 Sign in
      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        %div
          = f.label :email
          = f.email_field :email
        %div
          = f.label :password
          %br/
          = f.password_field :password
        - if devise_mapping.rememberable?
          %div
            = f.check_box :remember_me
            = f.label :remember_me
        %div= submit_tag("Sign in",  :disable_with => "Signing in...", :class => "btn")
      = render "links"
    .span4
      %br/