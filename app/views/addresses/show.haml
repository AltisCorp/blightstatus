.inner
  .row-fluid{"class" => "show-grid"}        
    .span5
      #address{"data-x" => @address.point.x, "data-y" => @address.point.y }
        %span{:class=>'badge badge-success'} 
          2
        
        #map{:style => "height: 400px;"}
    .span5
      .h1 Address:
      %h2=@address.address_long
      .h1 Status:

      -unless @case.nil?
        %h3 The most recent step was a #{@case.most_recent_status.class}, on #{@case.most_recent_status.date.strftime('%e %B, %Y')}.


    .span10
      -unless @case.nil?
        -unless @case.case_number.nil?
          %h1=@case.case_number

        %h2 1) Inspection:
        %span{:class=>'badge badge-success'}
        -unless @case.inspections.nil?
          -@case.inspections.each do |i|
            .inspection
              =i.inspection_date
              =i.inspection_type
                    
        %h2 2) Notice:
        -unless @case.notifications.nil?
          -@case.notifications.each do |n|
            .notificaton
              =n.notified
          
        %h2 3) Hearing:          
        %span{:class =>'badge badge-inverse'}
        -unless @case.hearings.nil?
          -@case.hearings.each do |h|
            .hearing
              =h.hearing_date
              =h.hearing_status

        %h2 4) Judgement:          
        -#%span{:class =>'badge badge-info'}
        -unless @case.judgement.nil?
          .hearing
            %b=@case.judgement.status.upcase
            %t=@case.judgement.notes

        %h2 5) Resolution:           
        %span{:class =>'badge badge-error'}

        %h2 6) Resets:
        -unless @case.resets.nil?
          -@case.resets.each do |r|
            .reset
              ="This case was reset on " << r.reset_date.to_s

